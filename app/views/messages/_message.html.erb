<div class="chat-index">
  <div class="upper-message">
    <div class="user-name">
      <!--投稿したユーザー-->
      <%= message.user.name %>
    </div>
    <div class="created-at">
        <!--投稿時刻 -->
        <%= message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message">
      <!--メッセージ-->
      <%= message.content %>
    </div>
  </div>

</div>